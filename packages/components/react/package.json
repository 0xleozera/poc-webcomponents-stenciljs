{
  "name": "@poc/react-component",
  "sideEffects": false,
  "version": "1.0.0",
  "private": true,
  "description": "React specific wrapper for component-library",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rm -rf dist",
    "compile": "yarn tsc",
    "tsc": "tsc -p .",
    "rollup": "rollup -c"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@types/jest": "23.3.9",
    "@types/node": "^15.12.2",
    "@types/react": "16.7.6",
    "@types/react-dom": "16.0.9",
    "jest": "^23.0.0",
    "jest-dom": "^3.0.2",
    "np": "^3.1.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "@poc/core": "*"
  },
  "peerDependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "jest": {
    "preset": "ts-jest",
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
