{
  "name": "poc-webcomponents-stenciljs",
  "private": true,
  "description": "POC webcomponents running at all front-end frameworks",
  "keywords": [
    "web-components",
    "react",
    "vue",
    "angular",
    "vanilla",
    "stencil"
  ],
  "version": "1.0.0",
  "author": "Leonardo Pinheiro <leonardo.pinheiro.dev@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "start:core": "npx lerna run start --scope @poc/core",
    "start:apps": "npx lerna run start --scope '{@poc/react-app,@poc/angular-app,@poc/vue2-app,@poc/vue3-app'}",
    "build:components": "npx lerna run build --scope '{@poc/core,@poc/angular-component,@poc/react-component,@poc/vue-component'}",
    "install": "npx lerna bootstrap",
    "clean": "npx lerna clean",
    "refresh": "yarn clean -y && yarn install"
  },
  "config": {
    "commitizen": {
      "path": "cz-gitmoji"
    }
  },
  "workspaces": [
    "packages/*",
    "packages/configs/*",
    "packages/components/*",
    "packages/apps/*"
  ],
  "devDependencies": {
    "lerna": "^4.0.0",
    "@poc/eslint": "*",
    "@poc/prettier": "*",
    "commitizen": "^4.2.4",
    "cz-gitmoji": "^0.0.7",
    "eslint": "^7.27.0",
    "husky": "4.3.2",
    "lint-staged": "^11.0.0",
    "typescript": "^4.3.2"
  }
}
